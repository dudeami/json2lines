{
    "compilerOptions": {
        "rootDir": "ts",
        "outDir": "dist",
        "target": "es2020",
        "lib": ["es2020", "DOM"],
        "types": ["node"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true
    }
}
